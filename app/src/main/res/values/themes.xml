<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Komentar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:ignore="ObsoleteSdkInt" tools:targetApi="l">
            ?attr/colorPrimaryVariant
        </item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Komentar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Komentar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Komentar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>